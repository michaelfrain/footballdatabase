<form class="form-horizontal">
  <div class="form-group">
    <label class="col-sm-2 control-label" for="gamesearch">Select Game</label>
      <div class="col-sm-2">
        <select class="form-control" id="gamesearch" name="gamesearch:skip">
          <option value=""></option>
        </select>
      </div>
  </div>
  <div class="form-group">
    <div class="col-sm-2"></div>
    <div class="col-sm-2">
      <button type="button" class="btn btn-success" id="gamesearchsubmit">Search for fouls</button>
    </div>
  </div>
</form>
<br />
<br />
<form class="form-horizontal" id="gameinfo">
  <div class="form-group">
    <label class="col-sm-2 control-label">Home Team</label>
    <p class="col-sm-2" id="hometeam"></p>
  </div>
</form>
<table class="table table-striped" id="foultable">
  <thead>
    <tr>
      <th>Quarter</th>
      <th>Time</th>
      <th>Team</th>
      <th>Foul</th>
